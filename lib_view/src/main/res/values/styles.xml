<resources>


    <!-- 基础按钮 -->
    <style name="base_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/base_btn_bg</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/base_btn_text_color</item>
    </style>



    <!-- 底部选择菜单 -->
    <style name="contact_popup_anim_bottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_push_bottom_out</item>
    </style>

    <!-- 底部选择菜单 -->
    <style name="edit">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/color_edit_text</item>
        <item name="android:textColorHint">@color/color_edit_hint</item>
        <item name="android:textSize">@dimen/normal_size</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/rectangle_loading_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
