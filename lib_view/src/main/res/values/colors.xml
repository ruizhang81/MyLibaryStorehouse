    <!-- 基础颜色 -->
    <color name="white">#ffffff</color>
    <color name="black">#000000</color>
    <color name="transparent">@android:color/transparent</color>
    <color name="half_transparent">#40000000</color>

    <!-- toast -->
    <color name="color_toast_bg">@color/main_color</color>
    <color name="color_toast_text">@color/white</color>

    <!-- editText color -->
    <color name="color_edit_text">#5a5a5a</color>
